{
	"type": "module",
	"$schema": "https://json.schemastore.org/package.json",
	"name": "tw-animate",
	"version": "1.0.3",
	"description": "A configuration to use Animate.css with Tailwind CSS",
	"keywords": [
		"animate.css",
		"animatecss",
		"animations",
		"animated",
		"configuration",
		"css",
		"jit",
		"keyframes",
		"plugin",
		"tailwind",
		"tailwindcss",
		"utilities"
	],
	"homepage": "https://designerajayk.github.io/tw-animate",
	"bugs": {
		"url": "https://github.com/designerajayk/tw-animate",
		"email": "designerajaykr@gmail.com"
	},
	"repository": "github:designerajayk/tw-animate",
	"funding": "https://github.com/sponsors/designerajayk",
	"license": "MIT",
	"author": "Ajay Kumar <designerajaykr@gmail.com> (https://github.com/designerajayk)",
	"sideEffects": false,
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"style": "dist/index.css",
	"browser": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"files": [
		"dist/*"
	],
	"scripts": {
		"build:css": "node ./src/style.ts",
		"build": "rimraf dist && tsup ./src/index.ts --dts-resolve --format esm,cjs --minify --treeshake && pnpm build:css",
		"lint": "biome lint",
		"check": "biome check --write",
		"prerelease": "git add . && pnpm i && pnpm build && pnpm lint",
		"release": "pnpm prerelease && release-it",
		"docs:dev": "vitepress dev docs",
		"docs:build": "vitepress build docs",
		"docs:preview": "vitepress preview docs"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.2",
		"@tailwindcss/vite": "4.1.12",
		"@tsconfig/node22": "22.0.2",
		"@types/node": "^24.3.0",
		"@vue/tsconfig": "0.8.1",
		"autoprefixer": "^10.4.13",
		"csstype": "3.1.3",
		"lightningcss": "^1.30.1",
		"postcss": "^8.4.20",
		"rimraf": "6.0.1",
		"tailwindcss": "3.4.17",
		"tsup": "8.5.0",
		"typescript": "5.9.2",
		"vitepress": "1.6.4",
		"vue": "3.5.19"
	},
	"peerDependencies": {
		"postcss": "^8",
		"tailwindcss": "^3 || ^4"
	},
	"peerDependenciesMeta": {
		"postcss": {
			"optional": true
		}
	},
	"publishConfig": {
		"registry": "https://registry.npmjs.org"
	}
}
